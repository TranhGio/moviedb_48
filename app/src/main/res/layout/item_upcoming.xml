<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/imageViewBackdropUpcoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="17dp"
        android:layout_height="19dp"
        android:layout_marginTop="28dp"
        android:background="#7E7272"
        android:src="@drawable/ic_star_yellow_24dp"
        app:layout_constraintStart_toStartOf="@+id/directorName"
        app:layout_constraintTop_toBottomOf="@+id/directorName"
        />
    <TextView
        android:id="@+id/directorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#7E7272"
        android:padding="7dp"
        android:text="Will Smith"
        app:layout_constraintStart_toStartOf="@+id/movieName"
        app:layout_constraintTop_toBottomOf="@+id/movieName"

        />
    <TextView
        android:id="@+id/avanrage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#7E7272"
        android:text="6.4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        />
    <TextView
        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:text="The Pursuit of Happyness"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackdropUpcoming"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        />
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#7E7272"
        android:text="1h 30'"
        app:layout_constraintBottom_toBottomOf="@+id/avanrage"
        app:layout_constraintStart_toEndOf="@+id/avanrage"
        app:layout_constraintTop_toTopOf="@+id/avanrage"
        app:layout_constraintVertical_bias="0.0"
        />
</androidx.constraintlayout.widget.ConstraintLayout>